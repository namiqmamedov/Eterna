@model List<Trainer>
@{
    ViewData["Title"] = "Index";
}


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <ol>
            <li><a href="index.html">Home</a></li>
            <li>Team</li>
        </ol>
        <h2>Team</h2>

    </div>
</section><!-- End Breadcrumbs -->

<!-- ======= Team Section ======= -->
<section id="team" class="team">
    <div class="container">

        <div class="row">
            @foreach (Trainer item in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="member">
                        <img src="~/img/team/@item.Image " alt="">
                        <h4>@item.Name @item.Surname</h4>
                        <span>@item.Position.Name</span>
                        <p>
                            @item.Description
                        </p>
                        <div class="social">
                            @if (item.FacebookURL != null)
                            {
                                <a href="@item.FacebookURL"><i class="bi bi-facebook"></i></a>
                            }
                            @if (item.TwitterURL != null)
                            {
                                <a href="@item.TwitterURL"><i class="bi bi-twitter"></i></a>
                            }
                            @if (item.InstagramURL != null)
                            {
                                <a href="@item.InstagramURL"><i class="bi bi-instagram"></i></a>
                            }
                            @if (item.LinkedinURL != null)
                            {
                                <a href="@item.LinkedinURL"><i class="bi bi-linkedin"></i></a>
                            }
                            
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>
</section><!-- End Team Section -->
